<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile Dashboard - <%= guildName %></title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/static/css/profile-dashboard.css">
</head>
<body>
  <% if (typeof isOAuth !== 'undefined' && isOAuth) { %>
  <!-- OAuth Navigation Bar -->
  <nav class="oauth-nav">
    <a href="/guilds" class="nav-back">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="20" height="20">
        <path d="M19 12H5M12 19l-7-7 7-7"/>
      </svg>
      <span>Back to Guilds</span>
    </a>
    <div class="nav-brand">
      <svg viewBox="0 0 100 100" fill="none" width="28" height="28">
        <defs>
          <linearGradient id="navLogoGrad" x1="0%" y1="0%" x2="100%" y2="100%">
            <stop offset="0%" stop-color="#8b5cf6" />
            <stop offset="100%" stop-color="#3b82f6" />
          </linearGradient>
        </defs>
        <path d="M50 5 L90 20 L90 50 C90 75 70 90 50 95 C30 90 10 75 10 50 L10 20 Z" fill="url(#navLogoGrad)" opacity="0.9"/>
        <path d="M50 20 L50 70 M35 35 L65 35 M40 55 L60 55" stroke="white" stroke-width="4" stroke-linecap="round" opacity="0.95"/>
      </svg>
      <span>Oathly</span>
    </div>
    <a href="/auth/logout" class="nav-logout">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="18" height="18">
        <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/>
        <polyline points="16 17 21 12 16 7"/>
        <line x1="21" y1="12" x2="9" y2="12"/>
      </svg>
    </a>
  </nav>
  <% } %>

  <div class="container">
    <!-- Header -->
    <div class="header">
      <% if (userAvatar) { %>
        <img src="<%= userAvatar %>" alt="Avatar" class="user-avatar">
      <% } %>
      <div class="user-info">
        <h1><%= userName %></h1>
        <p class="guild-name"><%= guildName %></p>
      </div>
      <button id="adminPanelBtn" class="admin-panel-btn" style="display: none;">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M12.22 2h-.44a2 2 0 0 0-2 2v.18a2 2 0 0 1-1 1.73l-.43.25a2 2 0 0 1-2 0l-.15-.08a2 2 0 0 0-2.73.73l-.22.38a2 2 0 0 0 .73 2.73l.15.1a2 2 0 0 1 1 1.72v.51a2 2 0 0 1-1 1.74l-.15.09a2 2 0 0 0-.73 2.73l.22.38a2 2 0 0 0 2.73.73l.15-.08a2 2 0 0 1 2 0l.43.25a2 2 0 0 1 1 1.73V20a2 2 0 0 0 2 2h.44a2 2 0 0 0 2-2v-.18a2 2 0 0 1 1-1.73l.43-.25a2 2 0 0 1 2 0l.15.08a2 2 0 0 0 2.73-.73l.22-.39a2 2 0 0 0-.73-2.73l-.15-.08a2 2 0 0 1-1-1.74v-.5a2 2 0 0 1 1-1.74l.15-.09a2 2 0 0 0 .73-2.73l-.22-.38a2 2 0 0 0-2.73-.73l-.15.08a2 2 0 0 1-2 0l-.43-.25a2 2 0 0 1-1-1.73V4a2 2 0 0 0-2-2z"/>
          <circle cx="12" cy="12" r="3"/>
        </svg>
        Admin Panel
      </button>
    </div>

    <!-- Tab Navigation -->
    <div class="tab-nav">
      <button class="tab-btn active" data-tab="info">
        <span>My Info</span>
      </button>
      <button class="tab-btn" data-tab="events">
        <span>Events</span>
      </button>
      <button class="tab-btn" data-tab="wishlist">
        <span>Wishlist</span>
      </button>
      <button class="tab-btn" data-tab="roster">
        <span>Roster</span>
      </button>
      <button class="tab-btn" data-tab="itemrolls">
        <span>Item Rolls</span>
      </button>
    </div>

    <!-- My Info Tab -->
    <div id="tab-info" class="tab-content active">
      <div class="card">
        <h2 class="card-title">Character Information</h2>
        <div id="info-content">
          <div class="loading">Loading...</div>
        </div>
      </div>

      <div class="card">
        <h2 class="card-title">Statistics</h2>
        <div id="stats-content">
          <div class="loading">Loading...</div>
        </div>
      </div>
    </div>

    <!-- Events Tab -->
    <div id="tab-events" class="tab-content">
      <div class="card">
        <h2 class="card-title">Upcoming Events</h2>
        <div id="events-content">
          <div class="loading">Loading...</div>
        </div>
      </div>

      <div class="card static-events">
        <h2 class="card-title">Weekly Schedule</h2>
        <div id="static-events-content">
          <div class="loading">Loading...</div>
        </div>
      </div>
    </div>

    <!-- Wishlist Tab -->
    <div id="tab-wishlist" class="tab-content">
      <div class="card">
        <h2 class="card-title">Your Wishlist</h2>
        <div id="wishlist-status"></div>
        <div id="wishlist-content">
          <div class="loading">Loading...</div>
        </div>
      </div>
    </div>

    <!-- Roster Tab -->
    <div id="tab-roster" class="tab-content">
      <div class="card">
        <h2 class="card-title">Guild Roster</h2>
        <div class="roster-sort-controls">
          <span class="roster-sort-label">Sort by:</span>
          <select id="roster-sort-field" class="roster-sort-select">
            <option value="name">Name</option>
            <option value="cp">Combat Power</option>
            <option value="role">Role</option>
            <option value="classes">Weapons</option>
            <option value="totalEvents">Total Events</option>
            <option value="attendance">Attendance %</option>
          </select>
          <div class="roster-direction-btns">
            <button id="sort-asc-btn" class="roster-direction-btn active" data-direction="asc">▲ Asc</button>
            <button id="sort-desc-btn" class="roster-direction-btn" data-direction="desc">▼ Desc</button>
          </div>
        </div>
        <div id="roster-content">
          <div class="loading">Loading...</div>
        </div>
      </div>
    </div>

    <!-- Item Rolls Tab -->
    <div id="tab-itemrolls" class="tab-content">
      <div class="card">
        <h2 class="card-title">Active Item Rolls</h2>
        <div id="active-rolls-content">
          <div class="loading">Loading...</div>
        </div>
      </div>
      <div class="card">
        <h2 class="card-title">Your Roll History</h2>
        <div id="roll-history-content">
          <div class="loading">Loading...</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Toast -->
  <div id="toast" class="toast"></div>

  <!-- Attendance Code Modal (Legacy - kept for compatibility) -->
  <div id="attendance-modal" class="modal-overlay">
    <div class="modal">
      <div class="modal-header">
        <h2>Record Attendance</h2>
        <button class="modal-close" onclick="closeAttendanceModal()">&times;</button>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <label>Enter Attendance Code</label>
          <input type="text" id="attendance-code" class="form-control" placeholder="4-digit code" maxlength="4">
        </div>
      </div>
      <div class="modal-footer">
        <button class="btn btn-secondary" onclick="closeAttendanceModal()">Cancel</button>
        <button class="btn btn-primary" onclick="submitAttendance()">Submit</button>
      </div>
    </div>
  </div>

  <!-- Party Members Modal -->
  <div id="party-members-modal" class="modal-overlay">
    <div class="modal">
      <div class="modal-header">
        <h2>Party Members</h2>
        <button class="modal-close" onclick="closePartyMembersModal()">&times;</button>
      </div>
      <div class="modal-body" id="party-members-content">
        <div class="loading">Loading...</div>
      </div>
      <div class="modal-footer">
        <button class="btn btn-secondary" onclick="closePartyMembersModal()">Close</button>
      </div>
    </div>
  </div>

  <!-- Initialize Constants from Server -->
  <script>
    const TOKEN = '<%= token || "" %>';
    const GUILD_ID = '<%= guildId %>';
    const CURRENT_USER_ID = '<%= userId %>';
    const IS_OAUTH = <%= typeof isOAuth !== 'undefined' && isOAuth ? 'true' : 'false' %>;

    // API base URL changes based on auth method
    const API_BASE = IS_OAUTH ? `/api/dashboard/${GUILD_ID}` : `/api/profile/${TOKEN}`;
  </script>

  <!-- Main Application Script -->
  <script src="/static/js/profile-dashboard.js"></script>
</body>
</html>
