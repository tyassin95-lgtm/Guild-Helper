<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Static Party Editor - <%= guildName %></title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    :root {
      --bg-primary: #0a0e17;
      --bg-secondary: #111827;
      --bg-card: #1a1f2e;
      --bg-card-hover: #232a3d;
      --border-color: #2d3748;
      --border-glow: rgba(139, 92, 246, 0.3);
      --text-primary: #f3f4f6;
      --text-secondary: #9ca3af;
      --text-muted: #6b7280;
      --accent-purple: #8b5cf6;
      --accent-purple-glow: rgba(139, 92, 246, 0.4);
      --tank-color: #3b82f6;
      --tank-bg: rgba(59, 130, 246, 0.15);
      --tank-border: rgba(59, 130, 246, 0.4);
      --tank-glow: rgba(59, 130, 246, 0.3);
      --healer-color: #22c55e;
      --healer-bg: rgba(34, 197, 94, 0.15);
      --healer-border: rgba(34, 197, 94, 0.4);
      --healer-glow: rgba(34, 197, 94, 0.3);
      --dps-color: #ef4444;
      --dps-bg: rgba(239, 68, 68, 0.15);
      --dps-border: rgba(239, 68, 68, 0.4);
      --dps-glow: rgba(239, 68, 68, 0.3);
      --success-color: #22c55e;
      --warning-color: #f59e0b;
      --danger-color: #ef4444;
    }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: var(--bg-primary);
      background-image:
        radial-gradient(ellipse at top, rgba(139, 92, 246, 0.1) 0%, transparent 50%),
        radial-gradient(ellipse at bottom right, rgba(59, 130, 246, 0.08) 0%, transparent 50%);
      min-height: 100vh;
      padding: 20px;
      color: var(--text-primary);
    }

    .container {
      max-width: 1700px;
      margin: 0 auto;
    }

    .header {
      background: var(--bg-secondary);
      padding: 20px 30px;
      border-radius: 16px;
      border: 1px solid var(--border-color);
      margin-bottom: 20px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    }

    .header h1 {
      color: var(--text-primary);
      font-size: 26px;
      font-weight: 700;
      margin-bottom: 10px;
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .header h1::before {
      content: '';
      display: inline-block;
      width: 4px;
      height: 28px;
      background: linear-gradient(180deg, var(--accent-purple), var(--tank-color));
      border-radius: 2px;
    }

    .guild-info {
      color: var(--text-secondary);
      font-size: 14px;
    }

    .guild-info strong {
      color: var(--text-muted);
      font-weight: 500;
    }

    .main-content {
      display: grid;
      grid-template-columns: 1fr 300px;
      gap: 20px;
    }

    .parties-section {
      background: var(--bg-secondary);
      padding: 24px;
      border-radius: 16px;
      border: 1px solid var(--border-color);
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    }

    .sidebar {
      display: flex;
      flex-direction: column;
      gap: 20px;
      transition: all 0.3s ease;
    }

    .sidebar.drag-remove-target {
      background: rgba(239, 68, 68, 0.1);
      border: 2px dashed var(--danger-color);
      border-radius: 16px;
      padding: 8px;
      margin: -8px;
    }

    .available-section,
    .reserve-section,
    .actions-section {
      background: var(--bg-secondary);
      padding: 20px;
      border-radius: 16px;
      border: 1px solid var(--border-color);
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    }

    .reserve-section {
      border-color: var(--warning-color);
      background: linear-gradient(180deg, rgba(245, 158, 11, 0.05) 0%, var(--bg-secondary) 100%);
    }

    .section-title {
      font-size: 15px;
      font-weight: 600;
      color: var(--text-primary);
      margin-bottom: 16px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .count-badge {
      background: linear-gradient(135deg, var(--accent-purple), #6366f1);
      color: white;
      padding: 4px 12px;
      border-radius: 20px;
      font-size: 12px;
      font-weight: 600;
      box-shadow: 0 2px 8px var(--accent-purple-glow);
    }

    .parties-grid {
      display: grid;
      grid-template-columns: repeat(6, 1fr);
      gap: 16px;
    }

    .party-card {
      background: var(--bg-card);
      border: 1px solid var(--border-color);
      border-radius: 12px;
      padding: 14px;
      transition: all 0.3s ease;
    }

    .party-card:hover {
      border-color: var(--accent-purple);
      box-shadow: 0 0 20px var(--accent-purple-glow);
    }

    .party-card.drag-over {
      border-color: var(--accent-purple);
      background: var(--bg-card-hover);
      transform: scale(1.02);
      box-shadow: 0 0 30px var(--accent-purple-glow);
    }

    .party-card.empty-slot {
      border-style: dashed;
      background: transparent;
      opacity: 0.6;
    }

    .party-card.empty-slot:hover {
      opacity: 1;
      border-color: var(--accent-purple);
    }

    .party-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 10px;
      padding-bottom: 10px;
      border-bottom: 1px solid var(--border-color);
    }

    .party-title {
      font-size: 14px;
      font-weight: 700;
      color: var(--text-primary);
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .party-status {
      font-size: 11px;
      padding: 4px 10px;
      border-radius: 12px;
      font-weight: 600;
    }

    .disband-btn {
      background: rgba(239, 68, 68, 0.2);
      color: var(--danger-color);
      border: 1px solid var(--danger-color);
      border-radius: 6px;
      width: 24px;
      height: 24px;
      font-size: 12px;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.2s ease;
    }

    .disband-btn:hover {
      background: var(--danger-color);
      color: white;
      transform: scale(1.1);
      box-shadow: 0 0 12px rgba(239, 68, 68, 0.4);
    }

    .status-full {
      background: rgba(34, 197, 94, 0.2);
      color: var(--success-color);
      border: 1px solid var(--success-color);
    }

    .status-partial {
      background: rgba(245, 158, 11, 0.2);
      color: var(--warning-color);
      border: 1px solid var(--warning-color);
    }

    .status-empty {
      background: rgba(107, 114, 128, 0.2);
      color: var(--text-muted);
      border: 1px solid var(--text-muted);
    }

    .party-composition {
      font-size: 11px;
      color: var(--text-secondary);
      margin-bottom: 10px;
      display: flex;
      gap: 8px;
      justify-content: center;
    }

    .comp-item {
      display: flex;
      align-items: center;
      gap: 3px;
    }

    .comp-tank { color: var(--tank-color); }
    .comp-healer { color: var(--healer-color); }
    .comp-dps { color: var(--dps-color); }

    .members-list {
      min-height: 60px;
      display: flex;
      flex-direction: column;
      gap: 8px;
    }

    .member-card {
      background: var(--bg-secondary);
      border: 1px solid var(--border-color);
      border-radius: 8px;
      padding: 8px 10px;
      cursor: move;
      transition: all 0.2s ease;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .member-card.role-tank {
      background: var(--tank-bg);
      border-color: var(--tank-border);
    }

    .member-card.role-tank:hover {
      box-shadow: 0 0 15px var(--tank-glow);
      border-color: var(--tank-color);
    }

    .member-card.role-healer {
      background: var(--healer-bg);
      border-color: var(--healer-border);
    }

    .member-card.role-healer:hover {
      box-shadow: 0 0 15px var(--healer-glow);
      border-color: var(--healer-color);
    }

    .member-card.role-dps {
      background: var(--dps-bg);
      border-color: var(--dps-border);
    }

    .member-card.role-dps:hover {
      box-shadow: 0 0 15px var(--dps-glow);
      border-color: var(--dps-color);
    }

    .member-card.dragging {
      opacity: 0.5;
      cursor: grabbing;
    }

    .member-card.drag-over {
      transform: scale(1.02);
      box-shadow: 0 0 20px var(--accent-purple-glow);
    }

    .member-avatar {
      width: 32px;
      height: 32px;
      border-radius: 50%;
      object-fit: cover;
      border: 2px solid var(--border-color);
      flex-shrink: 0;
    }

    .member-card.role-tank .member-avatar { border-color: var(--tank-color); }
    .member-card.role-healer .member-avatar { border-color: var(--healer-color); }
    .member-card.role-dps .member-avatar { border-color: var(--dps-color); }

    .member-info {
      flex: 1;
      min-width: 0;
    }

    .member-name {
      font-size: 12px;
      font-weight: 600;
      color: var(--text-primary);
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      display: flex;
      align-items: center;
      gap: 4px;
    }

    .leader-crown {
      color: #fbbf24;
      font-size: 10px;
    }

    .member-details {
      font-size: 10px;
      color: var(--text-muted);
    }

    .member-cp {
      font-size: 11px;
      color: var(--text-secondary);
      font-weight: 600;
      flex-shrink: 0;
      background: rgba(0, 0, 0, 0.3);
      padding: 2px 6px;
      border-radius: 4px;
    }

    .available-list,
    .reserve-list {
      display: flex;
      flex-direction: column;
      gap: 8px;
      max-height: 300px;
      overflow-y: auto;
    }

    .available-list::-webkit-scrollbar,
    .reserve-list::-webkit-scrollbar {
      width: 6px;
    }

    .available-list::-webkit-scrollbar-track,
    .reserve-list::-webkit-scrollbar-track {
      background: var(--bg-card);
      border-radius: 3px;
    }

    .available-list::-webkit-scrollbar-thumb,
    .reserve-list::-webkit-scrollbar-thumb {
      background: var(--border-color);
      border-radius: 3px;
    }

    .available-list::-webkit-scrollbar-thumb:hover,
    .reserve-list::-webkit-scrollbar-thumb:hover {
      background: var(--text-muted);
    }

    .empty-state {
      text-align: center;
      padding: 20px;
      color: var(--text-muted);
      font-size: 13px;
    }

    .drop-zone {
      border: 2px dashed var(--border-color);
      border-radius: 8px;
      padding: 12px;
      text-align: center;
      color: var(--text-muted);
      font-size: 11px;
      margin-top: 8px;
      transition: all 0.2s ease;
    }

    .drop-zone.drag-over {
      border-color: var(--accent-purple);
      background: rgba(139, 92, 246, 0.1);
      color: var(--accent-purple);
    }

    .btn {
      padding: 14px 24px;
      border: none;
      border-radius: 10px;
      font-size: 14px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      width: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    .btn-primary {
      background: linear-gradient(135deg, var(--accent-purple), #6366f1);
      color: white;
      box-shadow: 0 4px 15px var(--accent-purple-glow);
    }

    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 25px var(--accent-purple-glow);
    }

    .btn-success {
      background: linear-gradient(135deg, var(--success-color), #16a34a);
      color: white;
      box-shadow: 0 4px 15px var(--healer-glow);
    }

    .btn-success:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 25px var(--healer-glow);
    }

    .btn-secondary {
      background: var(--bg-card);
      color: var(--text-primary);
      border: 1px solid var(--border-color);
    }

    .btn-secondary:hover {
      background: var(--bg-card-hover);
      border-color: var(--accent-purple);
    }

    .btn-danger {
      background: rgba(239, 68, 68, 0.2);
      color: var(--danger-color);
      border: 1px solid var(--danger-color);
    }

    .btn-danger:hover {
      background: var(--danger-color);
      color: white;
    }

    .btn:disabled {
      opacity: 0.5;
      cursor: not-allowed;
      transform: none !important;
    }

    .actions-section .btn + .btn {
      margin-top: 12px;
    }

    .summary-stats {
      background: var(--bg-card);
      padding: 16px;
      border-radius: 12px;
      margin-bottom: 20px;
      border: 1px solid var(--border-color);
    }

    .summary-stats .stat {
      display: flex;
      justify-content: space-between;
      padding: 8px 0;
      font-size: 13px;
      border-bottom: 1px solid var(--border-color);
    }

    .summary-stats .stat:last-child {
      border-bottom: none;
    }

    .stat-label {
      color: var(--text-secondary);
    }

    .stat-value {
      font-weight: 600;
      color: var(--text-primary);
    }

    .loading {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.85);
      backdrop-filter: blur(8px);
      z-index: 2000;
      align-items: center;
      justify-content: center;
    }

    .loading.active {
      display: flex;
    }

    .loading-content {
      background: var(--bg-secondary);
      padding: 40px 60px;
      border-radius: 16px;
      text-align: center;
      border: 1px solid var(--border-color);
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
    }

    .spinner {
      border: 4px solid var(--bg-card);
      border-top: 4px solid var(--accent-purple);
      border-radius: 50%;
      width: 50px;
      height: 50px;
      animation: spin 1s linear infinite;
      margin: 0 auto 20px;
    }

    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    .toast {
      position: fixed;
      bottom: 24px;
      right: 24px;
      background: linear-gradient(135deg, var(--success-color), #16a34a);
      color: white;
      padding: 16px 28px;
      border-radius: 12px;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.4);
      display: none;
      z-index: 3000;
      animation: slideIn 0.3s ease;
      font-weight: 500;
    }

    .toast.error {
      background: linear-gradient(135deg, var(--danger-color), #dc2626);
    }

    .toast.show {
      display: block;
    }

    @keyframes slideIn {
      from { transform: translateX(100%); opacity: 0; }
      to { transform: translateX(0); opacity: 1; }
    }

    .create-party-card {
      border: 2px dashed var(--border-color);
      border-radius: 12px;
      padding: 20px 10px;
      background: transparent;
      cursor: pointer;
      transition: all 0.3s ease;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      gap: 10px;
      color: var(--text-muted);
      min-height: 140px;
    }

    .create-party-card:hover {
      border-color: var(--accent-purple);
      color: var(--accent-purple);
      background: rgba(139, 92, 246, 0.05);
      box-shadow: 0 0 20px var(--accent-purple-glow);
    }

    .create-party-card .icon {
      font-size: 28px;
      width: 50px;
      height: 50px;
      display: flex;
      align-items: center;
      justify-content: center;
      border: 2px dashed currentColor;
      border-radius: 50%;
    }

    .create-party-card .text {
      font-size: 12px;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.5px;
    }

    @media (max-width: 1600px) {
      .parties-grid {
        grid-template-columns: repeat(5, 1fr);
      }
    }

    @media (max-width: 1400px) {
      .parties-grid {
        grid-template-columns: repeat(4, 1fr);
      }
    }

    @media (max-width: 1200px) {
      .main-content {
        grid-template-columns: 1fr;
      }

      .parties-grid {
        grid-template-columns: repeat(3, 1fr);
      }
    }

    @media (max-width: 768px) {
      .parties-grid {
        grid-template-columns: repeat(2, 1fr);
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Header -->
    <div class="header">
      <h1>Static Party Manager</h1>
      <div class="guild-info">
        <strong>Guild:</strong> <%= guildName %>
      </div>
    </div>

    <!-- Main Content -->
    <div class="main-content">
      <!-- Parties Section -->
      <div class="parties-section">
        <div class="section-title">
          <span>Parties</span>
          <span class="count-badge" id="party-count">0</span>
        </div>

        <div class="summary-stats">
          <div class="stat">
            <span class="stat-label">Total Parties</span>
            <span class="stat-value" id="stat-parties">0</span>
          </div>
          <div class="stat">
            <span class="stat-label">Total Members in Parties</span>
            <span class="stat-value" id="stat-total">0</span>
          </div>
          <div class="stat">
            <span class="stat-label">Available Members</span>
            <span class="stat-value" id="stat-available">0</span>
          </div>
        </div>

        <div class="parties-grid" id="parties-grid">
          <!-- Parties will be rendered here -->
        </div>
      </div>

      <!-- Sidebar -->
      <div class="sidebar"
           ondragover="handleSidebarDragOver(event)"
           ondragleave="handleSidebarDragLeave(event)"
           ondrop="handleSidebarDrop(event)">
        <!-- Reserve Section -->
        <div class="reserve-section" id="reserve-section" style="display: none;">
          <div class="section-title">
            <span>Reserve</span>
            <span class="count-badge" id="reserve-count">0</span>
          </div>
          <div class="reserve-list" id="reserve-list"
               ondragover="handleReserveDragOver(event)"
               ondrop="handleReserveDrop(event)"
               ondragleave="handleReserveDragLeave(event)">
            <!-- Reserve members will be rendered here -->
          </div>
        </div>

        <!-- Available Members -->
        <div class="available-section">
          <div class="section-title">
            <span>Available</span>
            <span class="count-badge" id="available-count">0</span>
          </div>
          <div class="available-list" id="available-list">
            <!-- Available members will be rendered here -->
          </div>
        </div>

        <!-- Actions -->
        <div class="actions-section">
          <div class="section-title">Actions</div>
          <button class="btn btn-success" onclick="saveParties()" id="save-btn">
            Save Changes
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Loading Overlay -->
  <div class="loading" id="loading">
    <div class="loading-content">
      <div class="spinner"></div>
      <div id="loading-text">Saving parties...</div>
    </div>
  </div>

  <!-- Toast notification -->
  <div class="toast" id="toast">Parties saved successfully!</div>

  <script>
    // Constants
    const MAX_PARTIES = 12;
    const TOKEN = '<%= token %>';
    const DEFAULT_AVATAR = 'https://cdn.discordapp.com/embed/avatars/0.png';

    // Global state
    let parties = [];
    let availableMembers = [];
    let reserveMembers = [];
    let hasReserve = false;
    let draggedMember = null;
    let draggedSource = null; // 'party', 'available', or 'reserve'
    let draggedPartyIndex = null;
    let draggedMemberIndex = null;
    let hasUnsavedChanges = false;

    // Initialize
    document.addEventListener('DOMContentLoaded', () => {
      loadData();
    });

    // Warn before leaving with unsaved changes
    window.addEventListener('beforeunload', (e) => {
      if (hasUnsavedChanges) {
        e.preventDefault();
        e.returnValue = '';
      }
    });

    // Load initial data
    function loadData() {
      const partiesData = <%- parties %>;
      const availableData = <%- availableMembers %>;
      const reserveData = <%- reserveParty %>;

      parties = partiesData || [];
      availableMembers = availableData || [];

      if (reserveData) {
        hasReserve = true;
        reserveMembers = reserveData.members || [];
        document.getElementById('reserve-section').style.display = 'block';
      }

      dedupeAll();
      render();
    }

    // Render everything
    function render() {
      renderParties();
      renderAvailable();
      renderReserve();
      updateStats();
    }

    // Render parties
    function renderParties() {
      const grid = document.getElementById('parties-grid');
      grid.innerHTML = '';

      // Render existing parties
      for (let i = 0; i < parties.length; i++) {
        const party = parties[i];
        const card = createPartyCard(party, i);
        grid.appendChild(card);
      }

      // Add "Create Party" card if under max
      if (parties.length < MAX_PARTIES) {
        const createCard = document.createElement('div');
        createCard.className = 'create-party-card';
        createCard.onclick = () => createParty();
        createCard.innerHTML = `
          <div class="icon">+</div>
          <div class="text">Create Party</div>
        `;
        grid.appendChild(createCard);
      }

      document.getElementById('party-count').textContent = parties.filter(p => (p.members || []).length > 0).length;
    }

    // Create party card
    function createPartyCard(party, partyIndex) {
      const div = document.createElement('div');
      div.className = 'party-card';
      div.dataset.partyIndex = partyIndex;

      // Add drag-over event listeners
      div.addEventListener('dragover', (e) => handleDragOver(e, partyIndex));
      div.addEventListener('drop', (e) => handleDrop(e, partyIndex));
      div.addEventListener('dragleave', handleDragLeave);

      const members = party.members || [];
      const memberCount = members.length;
      const statusClass = memberCount === 6 ? 'status-full' : memberCount > 0 ? 'status-partial' : 'status-empty';
      const statusText = `${memberCount}/6`;

      // Calculate composition
      const composition = { tank: 0, healer: 0, dps: 0 };
      members.forEach(m => {
        if (composition[m.role] !== undefined) composition[m.role]++;
      });

      const disbandButton = `<button class="disband-btn" onclick="deleteParty(${partyIndex})" title="Delete party">&#10005;</button>`;

      div.innerHTML = `
        <div class="party-header">
          <div class="party-title">Party ${party.partyNumber}</div>
          <div style="display: flex; gap: 8px; align-items: center;">
            ${disbandButton}
            <div class="party-status ${statusClass}">${statusText}</div>
          </div>
        </div>
        <div class="party-composition">
          <span class="comp-item comp-tank">T: ${composition.tank}</span>
          <span class="comp-item comp-healer">H: ${composition.healer}</span>
          <span class="comp-item comp-dps">D: ${composition.dps}</span>
        </div>
        <div class="members-list" id="party-${partyIndex}-members">
          ${members.map((member, memberIndex) =>
            createMemberCardHTML(member, 'party', partyIndex, memberIndex)
          ).join('')}
          ${memberCount < 6 ? '<div class="drop-zone">Drop members here</div>' : ''}
        </div>
      `;

      return div;
    }

    // Create member card HTML
    function createMemberCardHTML(member, source, partyIndex, memberIndex) {
      const avatarUrl = member.avatarUrl || DEFAULT_AVATAR;
      const leaderBadge = member.isLeader ? '<span class="leader-crown">&#9733;</span>' : '';
      const roleClass = `role-${member.role || 'dps'}`;

      return `
        <div class="member-card ${roleClass}"
             draggable="true"
             data-source="${source}"
             data-party-index="${partyIndex}"
             data-member-index="${memberIndex}"
             data-user-id="${member.userId}"
             ondragstart="handleDragStart(event, '${source}', ${partyIndex}, ${memberIndex})"
             ondragend="handleDragEnd(event)"
             ondragover="handleMemberDragOver(event)"
             ondrop="handleMemberDrop(event, '${source}', ${partyIndex}, ${memberIndex})"
             ondragleave="handleMemberDragLeave(event)">
          <img class="member-avatar" src="${avatarUrl}" alt="" onerror="this.src='${DEFAULT_AVATAR}'">
          <div class="member-info">
            <div class="member-name">${leaderBadge}${member.displayName}</div>
            <div class="member-details">${member.weapon1 || '?'}/${member.weapon2 || '?'}</div>
          </div>
          <div class="member-cp">${formatCP(member.cp)}</div>
        </div>
      `;
    }

    // Render available members
    function renderAvailable() {
      const list = document.getElementById('available-list');

      if (availableMembers.length === 0) {
        list.innerHTML = '<div class="empty-state">No available members</div>';
        document.getElementById('available-count').textContent = '0';
        return;
      }

      list.innerHTML = availableMembers.map((member, index) => {
        const avatarUrl = member.avatarUrl || DEFAULT_AVATAR;
        const roleClass = `role-${member.role || 'dps'}`;

        return `
          <div class="member-card ${roleClass}"
               draggable="true"
               data-source="available"
               data-available-index="${index}"
               data-user-id="${member.userId}"
               ondragstart="handleDragStart(event, 'available', null, ${index})"
               ondragend="handleDragEnd(event)">
            <img class="member-avatar" src="${avatarUrl}" alt="" onerror="this.src='${DEFAULT_AVATAR}'">
            <div class="member-info">
              <div class="member-name">${member.displayName}</div>
              <div class="member-details">${member.weapon1 || '?'}/${member.weapon2 || '?'}</div>
            </div>
            <div class="member-cp">${formatCP(member.cp)}</div>
          </div>
        `;
      }).join('');

      document.getElementById('available-count').textContent = availableMembers.length;
    }

    // Render reserve members
    function renderReserve() {
      if (!hasReserve) return;

      const list = document.getElementById('reserve-list');

      if (reserveMembers.length === 0) {
        list.innerHTML = '<div class="empty-state">Drop members here for reserve</div>';
        document.getElementById('reserve-count').textContent = '0';
        return;
      }

      list.innerHTML = reserveMembers.map((member, index) => {
        const avatarUrl = member.avatarUrl || DEFAULT_AVATAR;
        const roleClass = `role-${member.role || 'dps'}`;

        return `
          <div class="member-card ${roleClass}"
               draggable="true"
               data-source="reserve"
               data-reserve-index="${index}"
               data-user-id="${member.userId}"
               ondragstart="handleDragStart(event, 'reserve', null, ${index})"
               ondragend="handleDragEnd(event)">
            <img class="member-avatar" src="${avatarUrl}" alt="" onerror="this.src='${DEFAULT_AVATAR}'">
            <div class="member-info">
              <div class="member-name">${member.displayName}</div>
              <div class="member-details">${member.weapon1 || '?'}/${member.weapon2 || '?'}</div>
            </div>
            <div class="member-cp">${formatCP(member.cp)}</div>
          </div>
        `;
      }).join('');

      document.getElementById('reserve-count').textContent = reserveMembers.length;
    }

    // Drag handlers
    function handleDragStart(event, source, partyIndex, memberIndex) {
      event.dataTransfer.effectAllowed = 'move';
      draggedSource = source;
      draggedPartyIndex = partyIndex;
      draggedMemberIndex = memberIndex;

      if (source === 'party') {
        draggedMember = { ...parties[partyIndex].members[memberIndex] };
      } else if (source === 'available') {
        draggedMember = { ...availableMembers[memberIndex] };
      } else if (source === 'reserve') {
        draggedMember = { ...reserveMembers[memberIndex] };
      }

      event.target.classList.add('dragging');
    }

    function handleDragEnd(event) {
      event.target.classList.remove('dragging');
      document.querySelectorAll('.party-card').forEach(card => {
        card.classList.remove('drag-over');
      });
      document.querySelectorAll('.member-card').forEach(card => {
        card.classList.remove('drag-over');
      });
      document.querySelectorAll('.drop-zone').forEach(zone => {
        zone.classList.remove('drag-over');
      });
    }

    function handleDragOver(event, toPartyIndex) {
      event.preventDefault();
      event.dataTransfer.dropEffect = 'move';
      event.currentTarget.classList.add('drag-over');
    }

    function handleDragLeave(event) {
      event.currentTarget.classList.remove('drag-over');
    }

    // Handle dropping on a party card (empty space or drop zone)
    function handleDrop(event, toPartyIndex) {
      event.preventDefault();
      event.stopPropagation();
      event.currentTarget.classList.remove('drag-over');

      if (!draggedMember) return;

      const toParty = parties[toPartyIndex];

      // Check if party is full (only if not swapping)
      if ((toParty.members || []).length >= 6) {
        showToast('Party is full! Drag onto a member to swap.', true);
        resetDragState();
        return;
      }

      removeMemberByUserId(draggedMember.userId);

      if (!toParty.members) toParty.members = [];
      toParty.members.push({ ...draggedMember });

      hasUnsavedChanges = true;
      resetDragState();
      setTimeout(render, 0);
    }

    // Handle drag over a member card (for swapping)
    function handleMemberDragOver(event) {
      event.preventDefault();
      event.stopPropagation();
      event.dataTransfer.dropEffect = 'move';
      event.currentTarget.classList.add('drag-over');
    }

    function handleMemberDragLeave(event) {
      event.currentTarget.classList.remove('drag-over');
    }

    function handleMemberDrop(event, targetSource, targetPartyIndex, targetMemberIndex) {
      event.preventDefault();
      event.stopPropagation();
      event.currentTarget.classList.remove('drag-over');

      if (!draggedMember) return;

      const draggedUserId = draggedMember.userId;

      // Get target member
      let targetMember;
      if (targetSource === 'party') {
        targetMember = parties[targetPartyIndex].members[targetMemberIndex];
      } else if (targetSource === 'available') {
        targetMember = availableMembers[targetMemberIndex];
      } else if (targetSource === 'reserve') {
        targetMember = reserveMembers[targetMemberIndex];
      }

      if (!targetMember || draggedUserId === targetMember.userId) {
        resetDragState();
        return;
      }

      // Special case: reordering within the same party
      if (draggedSource === 'party' && targetSource === 'party' && 
          draggedPartyIndex === targetPartyIndex) {
        const party = parties[targetPartyIndex];
        const [movedMember] = party.members.splice(draggedMemberIndex, 1);
        // Adjust target index if we're moving down (since we removed an element before the target)
        const adjustedTargetIndex = draggedMemberIndex < targetMemberIndex 
          ? targetMemberIndex - 1 
          : targetMemberIndex;
        party.members.splice(adjustedTargetIndex, 0, movedMember);
        
        hasUnsavedChanges = true;
        resetDragState();
        setTimeout(render, 0);
        return;
      }

      // Remove both globally to avoid duplicates
      removeMemberByUserId(draggedUserId);
      removeMemberByUserId(targetMember.userId);

      // Insert dragged member into target location
      if (targetSource === 'party') {
        parties[targetPartyIndex].members.splice(targetMemberIndex, 0, draggedMember);
      } else if (targetSource === 'available') {
        availableMembers.splice(targetMemberIndex, 0, draggedMember);
      } else if (targetSource === 'reserve') {
        reserveMembers.splice(targetMemberIndex, 0, draggedMember);
      }

      // Insert target member into original dragged location
      if (draggedSource === 'party') {
        parties[draggedPartyIndex].members.splice(draggedMemberIndex, 0, targetMember);
      } else if (draggedSource === 'available') {
        availableMembers.splice(draggedMemberIndex, 0, targetMember);
      } else if (draggedSource === 'reserve') {
        reserveMembers.splice(draggedMemberIndex, 0, targetMember);
      }

      hasUnsavedChanges = true;
      resetDragState();
      setTimeout(render, 0);
    }

    function resetDragState() {
      draggedMember = null;
      draggedSource = null;
      draggedPartyIndex = null;
      draggedMemberIndex = null;
    }

    // Handle dragging over sidebar to move to available
    function handleSidebarDragOver(event) {
      if (draggedSource === 'party') {
        event.preventDefault();
        event.dataTransfer.dropEffect = 'move';
        document.querySelector('.sidebar').classList.add('drag-remove-target');
      }
    }

    function handleSidebarDragLeave(event) {
      if (event.target.classList.contains('sidebar')) {
        document.querySelector('.sidebar').classList.remove('drag-remove-target');
      }
    }

    function handleSidebarDrop(event) {
      event.preventDefault();
      document.querySelector('.sidebar').classList.remove('drag-remove-target');

      if (!draggedMember || draggedSource !== 'party') return;

      // Remove from party
      removeMemberByUserId(draggedMember.userId);

      // Add to available
      availableMembers.push({ ...draggedMember });

      hasUnsavedChanges = true;
      resetDragState();
      setTimeout(render, 0);
    }

    // Reserve drag handlers
    function handleReserveDragOver(event) {
      event.preventDefault();
      event.stopPropagation();
      event.dataTransfer.dropEffect = 'move';
      event.currentTarget.classList.add('drag-over');
    }

    function handleReserveDragLeave(event) {
      event.currentTarget.classList.remove('drag-over');
    }

    function handleReserveDrop(event) {
      event.preventDefault();
      event.stopPropagation();
      event.currentTarget.classList.remove('drag-over');
      document.querySelector('.sidebar').classList.remove('drag-remove-target');

      if (!draggedMember) return;

      // Remove from source
      removeMemberByUserId(draggedMember.userId);

      // Add to reserve
      reserveMembers.push({ ...draggedMember });

      hasUnsavedChanges = true;
      resetDragState();
      setTimeout(render, 0);
    }

    // Create a new party
    function createParty() {
      if (parties.length >= MAX_PARTIES) {
        showToast('Maximum of 12 parties allowed', true);
        return;
      }

      // Find next available party number
      const usedNumbers = new Set(parties.map(p => p.partyNumber));
      let nextNumber = 1;
      while (usedNumbers.has(nextNumber)) {
        nextNumber++;
      }

      parties.push({
        partyNumber: nextNumber,
        members: [],
        isNew: true
      });

      // Sort by party number
      parties.sort((a, b) => a.partyNumber - b.partyNumber);

      hasUnsavedChanges = true;
      setTimeout(render, 0);
      showToast('Party created! Don\'t forget to save.');
    }

    // Delete a party
    function deleteParty(partyIndex) {
      const party = parties[partyIndex];
      const memberCount = (party.members || []).length;

      const message = memberCount > 0
        ? `Delete Party ${party.partyNumber}? Its ${memberCount} member(s) will be moved to Available.`
        : `Delete Party ${party.partyNumber}?`;

      if (!confirm(message)) return;

      // Move members to available
      if (party.members && party.members.length > 0) {
        availableMembers.push(...party.members);
      }

      // Remove party
      parties.splice(partyIndex, 1);

      hasUnsavedChanges = true;
      setTimeout(render, 0);
      showToast('Party deleted! Don\'t forget to save.');
    }

    // Update statistics
    function updateStats() {
      const totalMembers = parties.reduce((sum, p) => sum + ((p.members || []).length), 0);

      document.getElementById('stat-parties').textContent = parties.length;
      document.getElementById('stat-total').textContent = totalMembers;
      document.getElementById('stat-available').textContent = availableMembers.length;
    }

    function dedupeAll() {
      const seen = new Set();

      const dedupeList = (arr) => {
        return arr.filter(m => {
          if (!m || !m.userId) return false;
          if (seen.has(m.userId)) return false;
          seen.add(m.userId);
          return true;
        });
      };

      // Dedupe party members
      parties.forEach(p => {
        p.members = dedupeList(p.members || []);
      });

      // Dedupe available
      availableMembers = dedupeList(availableMembers);

      // Dedupe reserve
      reserveMembers = dedupeList(reserveMembers);
    }

    // Format CP
    function formatCP(cp) {
      if (!cp) return '0';
      if (cp >= 1000000) return `${(cp / 1000000).toFixed(1)}M`;
      if (cp >= 1000) return `${(cp / 1000).toFixed(1)}K`;
      return cp.toString();
    }

    // Remove member by userID
    function removeMemberByUserId(userId) {
      // Remove from parties
      parties.forEach(p => {
        if (!p.members) return;
        p.members = p.members.filter(m => m.userId !== userId);
      });

      // Remove from available
      availableMembers = availableMembers.filter(m => m.userId !== userId);

      // Remove from reserve
      reserveMembers = reserveMembers.filter(m => m.userId !== userId);
    }

    // Show toast notification
    function showToast(message, isError = false) {
      const toast = document.getElementById('toast');
      toast.textContent = message;
      toast.className = 'toast show' + (isError ? ' error' : '');
      setTimeout(() => toast.classList.remove('show'), 3000);
    }

    // Save parties
    async function saveParties() {
      document.getElementById('loading').classList.add('active');
      document.getElementById('loading-text').textContent = 'Saving parties...';

      try {
        const response = await fetch(`/api/static-party-editor/${TOKEN}/save`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            parties: parties.map(p => ({
              partyNumber: p.partyNumber,
              members: p.members || [],
              isNew: p.isNew || false
            })),
            reserveMembers: hasReserve ? reserveMembers : undefined
          })
        });

        const data = await response.json();

        document.getElementById('loading').classList.remove('active');

        if (response.ok) {
          hasUnsavedChanges = false;
          // Remove isNew flag from parties
          parties.forEach(p => delete p.isNew);
          showToast('Parties saved successfully!');
        } else {
          showToast('Failed to save parties: ' + data.error, true);
        }
      } catch (error) {
        document.getElementById('loading').classList.remove('active');
        console.error('Save error:', error);
        showToast('Failed to save parties. Please try again.', true);
      }
    }
  </script>
