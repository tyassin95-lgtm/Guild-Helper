      try {
        await apiCall('event-rsvp', 'POST', { eventId, status });
        showToast('RSVP updated', 'success');
        await loadEventsData();

        // After reload, re-apply cooldown styling to new buttons
        setTimeout(() => applyRsvpCooldown(eventId), 100);
      } catch (error) {
        showToast(error.message, 'error');
        // Clear cooldown on error
        rsvpCooldowns.delete(eventId);
        // Re-enable buttons on error
        rsvpButtons?.forEach(btn => {
          btn.disabled = false;
          btn.style.opacity = '';
          btn.style.cursor = '';
        });
      } finally {
        processingEvents.delete(eventId);
      }
    }

    // Apply cooldown styling to RSVP buttons after page reload
