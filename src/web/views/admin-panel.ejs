<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Panel - <%= guildName %></title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/static/css/admin-panel.css">
</head>
<body>
  <div class="container">
    <!-- Header -->
    <div class="header">
      <div class="header-icon">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M12.22 2h-.44a2 2 0 0 0-2 2v.18a2 2 0 0 1-1 1.73l-.43.25a2 2 0 0 1-2 0l-.15-.08a2 2 0 0 0-2.73.73l-.22.38a2 2 0 0 0 .73 2.73l.15.1a2 2 0 0 1 1 1.72v.51a2 2 0 0 1-1 1.74l-.15.09a2 2 0 0 0-.73 2.73l.22.38a2 2 0 0 0 2.73.73l.15-.08a2 2 0 0 1 2 0l.43.25a2 2 0 0 1 1 1.73V20a2 2 0 0 0 2 2h.44a2 2 0 0 0 2-2v-.18a2 2 0 0 1 1-1.73l.43-.25a2 2 0 0 1 2 0l.15.08a2 2 0 0 0 2.73-.73l.22-.39a2 2 0 0 0-.73-2.73l-.15-.08a2 2 0 0 1-1-1.74v-.5a2 2 0 0 1 1-1.74l.15-.09a2 2 0 0 0 .73-2.73l-.22-.38a2 2 0 0 0-2.73-.73l-.15.08a2 2 0 0 1-2 0l-.43-.25a2 2 0 0 1-1-1.73V4a2 2 0 0 0-2-2z"/>
          <circle cx="12" cy="12" r="3"/>
        </svg>
      </div>
      <div class="header-info">
        <h1>Admin Panel</h1>
        <p class="guild-name"><%= guildName %></p>
      </div>
      <div style="margin-left: auto; display: flex; gap: 12px;">
        <a href="#" class="back-btn" id="backToProfile">Back to Profile</a>
        <a href="/logout" class="logout-btn" title="Logout">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
            <polyline points="16 17 21 12 16 7"></polyline>
            <line x1="21" y1="12" x2="9" y2="12"></line>
          </svg>
          Logout
        </a>
      </div>
    </div>

    <!-- Tab Navigation -->
    <nav class="tab-nav">
      <button class="tab-btn active" data-tab="parties">Parties</button>
      <button class="tab-btn" data-tab="events">Events</button>
      <button class="tab-btn" data-tab="items">Items</button>
      <button class="tab-btn" data-tab="reminders">Reminders</button>
      <button class="tab-btn" data-tab="reset">Reset</button>
    </nav>

    <!-- Tab Content: Parties -->
    <div id="tab-parties" class="tab-content active">
      <div class="card">
        <h2 class="card-title">Static Party Management</h2>
        <p class="card-description">Edit and manage your guild's static party assignments. Same as using /viewparties on Discord.</p>
        <button class="btn btn-primary" id="openStaticPartyEditor">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
            <circle cx="9" cy="7" r="4"/>
            <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
            <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
          </svg>
          Open Static Party Editor
        </button>
      </div>

      <div class="card">
        <h2 class="card-title">Event Party Formation</h2>
        <p class="card-description">Form parties for a specific event based on RSVP data. Select an event to form parties.</p>
        <div id="eventPartiesList" class="event-list">
          <div class="loading">Loading events...</div>
        </div>
      </div>

      <div class="card">
        <h2 class="card-title">Party History</h2>
        <p class="card-description">View past event parties that were sent via DM.</p>
        <div id="partyHistoryList" class="event-list">
          <div class="loading">Loading party history...</div>
        </div>
      </div>
    </div>

    <!-- Tab Content: Events -->
    <div id="tab-events" class="tab-content">
      <!-- Create Event Card -->
      <div class="card">
        <h2 class="card-title">Create PvP Event</h2>
        <p class="card-description">Create a new PvP event - same as using /pvpevent on Discord.</p>

        <div class="event-creation-form">
          <!-- Event Type Selection -->
          <div class="form-group">
            <label for="eventType">Event Type</label>
            <div class="event-type-grid">
              <button type="button" class="event-type-btn" data-type="siege" data-needs-location="false">
                <span class="event-type-emoji">üè∞</span>
                <span class="event-type-name">Siege</span>
              </button>
              <button type="button" class="event-type-btn" data-type="riftstone" data-needs-location="true">
                <span class="event-type-emoji">üíé</span>
                <span class="event-type-name">Riftstone</span>
              </button>
              <button type="button" class="event-type-btn" data-type="boonstone" data-needs-location="true">
                <span class="event-type-emoji">‚ú®</span>
                <span class="event-type-name">Boonstone</span>
              </button>
              <button type="button" class="event-type-btn" data-type="wargames" data-needs-location="false">
                <span class="event-type-emoji">‚öîÔ∏è</span>
                <span class="event-type-name">Wargames</span>
              </button>
              <button type="button" class="event-type-btn" data-type="warboss" data-needs-location="true">
                <span class="event-type-emoji">üëπ</span>
                <span class="event-type-name">War Boss</span>
              </button>
              <button type="button" class="event-type-btn" data-type="guildevent" data-needs-location="true">
                <span class="event-type-emoji">üéÆ</span>
                <span class="event-type-name">Guild Event</span>
              </button>
            </div>
          </div>

          <!-- Location (shown only for certain event types) -->
          <div class="form-group" id="locationGroup" style="display: none;">
            <label for="eventLocation">Location</label>
            <input type="text" id="eventLocation" class="form-control" placeholder="e.g., Stonegard Castle, Riftstone Valley">
          </div>

          <!-- Date and Time Picker -->
          <div class="form-grid">
            <div class="form-group">
              <label for="eventDate">Event Date</label>
              <input type="date" id="eventDate" class="form-control">
            </div>
            <div class="form-group">
              <label for="eventTime">Event Time</label>
              <input type="time" id="eventTime" class="form-control">
            </div>
          </div>

          <!-- Bonus Points and Image -->
          <div class="form-grid">
            <div class="form-group">
              <label for="eventBonusPoints">Bonus Points</label>
              <input type="number" id="eventBonusPoints" class="form-control" value="10" min="1" max="9999" placeholder="10">
            </div>
            <div class="form-group">
              <label for="eventImageUrl">Image URL (Optional)</label>
              <input type="text" id="eventImageUrl" class="form-control" placeholder="Leave blank for default image">
            </div>
          </div>

          <!-- Channel Selection -->
          <div class="form-group">
            <label for="eventChannel">Post to Channel</label>
            <select id="eventChannel" class="form-control">
              <option value="">Select channel...</option>
            </select>
          </div>

          <!-- Description with Templates -->
          <div class="form-group">
            <label for="eventDescription">
              Event Description
              <button type="button" class="template-dropdown-btn" id="templateDropdownBtn">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
                  <polyline points="14 2 14 8 20 8"/>
                  <line x1="16" y1="13" x2="8" y2="13"/>
                  <line x1="16" y1="17" x2="8" y2="17"/>
                  <polyline points="10 9 9 9 8 9"/>
                </svg>
                Templates
              </button>
            </label>
            <div class="template-dropdown" id="templateDropdown">
              <div class="template-dropdown-header">
                <span>Description Templates</span>
                <button type="button" class="template-close-btn" onclick="closeTemplateDropdown()">&times;</button>
              </div>
              <div class="template-list" id="templateList">
                <div class="loading-small">Loading templates...</div>
              </div>
              <div class="template-actions">
                <button type="button" class="btn btn-sm btn-secondary" onclick="saveCurrentAsTemplate()">
                  <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"/>
                    <polyline points="17 21 17 13 7 13 7 21"/>
                    <polyline points="7 3 7 8 15 8"/>
                  </svg>
                  Save Current
                </button>
              </div>
            </div>
            <textarea id="eventDescription" class="form-control textarea-large" placeholder="Enter event details, instructions, and any important information..." maxlength="2000"></textarea>
            <div class="char-counter"><span id="descCharCount">0</span>/2000</div>
          </div>

          <!-- Create Button -->
          <button class="btn btn-primary btn-lg" id="createEventBtn" disabled>
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
              <line x1="16" y1="2" x2="16" y2="6"/>
              <line x1="8" y1="2" x2="8" y2="6"/>
              <line x1="3" y1="10" x2="21" y2="10"/>
              <line x1="12" y1="14" x2="12" y2="18"/>
              <line x1="10" y1="16" x2="14" y2="16"/>
            </svg>
            Create Event
          </button>
        </div>
      </div>

      <!-- Active Events Card -->
      <div class="card">
        <h2 class="card-title">Active Events</h2>
        <p class="card-description">View attendance codes and manage existing events.</p>
        <div id="eventsList" class="event-list">
          <div class="loading">Loading events...</div>
        </div>
      </div>
    </div>

    <!-- Tab Content: Items -->
    <div id="tab-items" class="tab-content">
      <div class="card">
        <h2 class="card-title">Create Item Roll</h2>
        <p class="card-description">Create a new item roll and send it to a channel. Same as using /itemroll on Discord.</p>

        <div class="form-grid">
          <div class="form-group">
            <label for="itemCategory">Category</label>
            <select id="itemCategory" class="form-control">
              <option value="">Select category...</option>
            </select>
          </div>
          <div class="form-group">
            <label for="itemSubcategory">Type</label>
            <select id="itemSubcategory" class="form-control" disabled>
              <option value="">Select type...</option>
            </select>
          </div>
          <div class="form-group">
            <label for="itemSelect">Item</label>
            <select id="itemSelect" class="form-control" disabled>
              <option value="">Select item...</option>
            </select>
          </div>
          <div class="form-group">
            <label for="itemTrait">Trait</label>
            <input type="text" id="itemTrait" class="form-control" placeholder="e.g., Attack Speed">
          </div>
          <div class="form-group">
            <label for="rollDuration">Duration (hours)</label>
            <input type="number" id="rollDuration" class="form-control" value="1" min="1" max="72">
          </div>
          <div class="form-group">
            <label for="rollChannel">Channel</label>
            <select id="rollChannel" class="form-control">
              <option value="">Select channel...</option>
            </select>
          </div>
        </div>

        <div class="form-group">
          <label>Eligible Users (leave empty for everyone)</label>
          <div class="user-select-container">
            <input type="text" id="userSearchRoll" class="form-control" placeholder="Search users...">
            <div id="rollUserList" class="user-checkbox-list"></div>
          </div>
        </div>

        <button class="btn btn-primary" id="createItemRoll" disabled>
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M12 2v20"/>
            <path d="M2 12h20"/>
          </svg>
          Create Item Roll
        </button>
      </div>

      <div class="card">
        <h2 class="card-title">Give Items</h2>
        <p class="card-description">Distribute items to users who have wishlisted them. Same as using /giveitem on Discord.</p>

        <div class="form-group">
          <label>Select Item</label>
          <select id="giveItemSelect" class="form-control">
            <option value="">Select an item...</option>
          </select>
        </div>

        <div id="giveItemUsers" class="user-checkbox-list" style="display: none;"></div>

        <div id="giveItemPending" class="pending-distributions" style="display: none;">
          <h4>Pending Distributions</h4>
          <div id="pendingList"></div>
        </div>

        <div class="btn-group">
          <button class="btn btn-success" id="giveItemBtn" disabled>
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M20 6L9 17l-5-5"/>
            </svg>
            Give Item(s)
          </button>
        </div>
      </div>
    </div>

    <!-- Tab Content: Reminders -->
    <div id="tab-reminders" class="tab-content">
      <div class="card">
        <h2 class="card-title">Party Info Reminders</h2>
        <p class="card-description">Send DM reminders to guild members who haven't set up their party info (/myinfo). Same as using /remindparties on Discord.</p>
        <div id="partyReminderStats" class="reminder-stats"></div>
        <button class="btn btn-primary" id="sendPartyReminders">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M22 17H2a3 3 0 0 0 3-3V9a7 7 0 0 1 14 0v5a3 3 0 0 0 3 3zm-8.27 4a2 2 0 0 1-3.46 0"/>
          </svg>
          Send Party Info Reminders
        </button>
      </div>

      <div class="card">
        <h2 class="card-title">Wishlist Reminders</h2>
        <p class="card-description">Send DM reminders to guild members who haven't submitted their wishlist. Same as using /wishlistreminder on Discord.</p>
        <div id="wishlistReminderStats" class="reminder-stats"></div>
        <button class="btn btn-primary" id="sendWishlistReminders">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M22 17H2a3 3 0 0 0 3-3V9a7 7 0 0 1 14 0v5a3 3 0 0 0 3 3zm-8.27 4a2 2 0 0 1-3.46 0"/>
          </svg>
          Send Wishlist Reminders
        </button>
      </div>
    </div>

    <!-- Tab Content: Reset -->
    <div id="tab-reset" class="tab-content">
      <div class="card">
        <h2 class="card-title">Reset User Party Info</h2>
        <p class="card-description">Reset a user's party info (weapons, CP, role). They will need to use /myinfo again. Same as using /resetparties user on Discord.</p>

        <div class="form-group">
          <label for="resetPartyUser">Select User</label>
          <select id="resetPartyUser" class="form-control">
            <option value="">Select a user...</option>
          </select>
        </div>

        <button class="btn btn-danger" id="resetPartyBtn" disabled>
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M3 6h18"/>
            <path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"/>
            <path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"/>
          </svg>
          Reset Party Info
        </button>
      </div>

      <div class="card">
        <h2 class="card-title">Reset User Wishlist</h2>
        <p class="card-description">Reset a user's wishlist submission. Their received items will be preserved. Same as using /resetuserwishlist on Discord.</p>

        <div class="form-group">
          <label for="resetWishlistUser">Select User</label>
          <select id="resetWishlistUser" class="form-control">
            <option value="">Select a user...</option>
          </select>
        </div>

        <button class="btn btn-danger" id="resetWishlistBtn" disabled>
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M3 6h18"/>
            <path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"/>
            <path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"/>
          </svg>
          Reset Wishlist
        </button>
      </div>
    </div>

    <!-- Save Template Modal -->
    <div id="saveTemplateModal" class="modal-overlay">
      <div class="modal">
        <div class="modal-header">
          <h2>Save Description Template</h2>
          <button class="modal-close" onclick="closeModal('saveTemplateModal')">&times;</button>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label for="templateName">Template Name</label>
            <input type="text" id="templateName" class="form-control" placeholder="e.g., Standard Siege, Weekly Riftstone">
          </div>
          <div class="form-group">
            <label>Preview</label>
            <div class="template-preview" id="templatePreview"></div>
          </div>
        </div>
        <div class="modal-footer">
          <button class="btn btn-secondary" onclick="closeModal('saveTemplateModal')">Cancel</button>
          <button class="btn btn-primary" id="confirmSaveTemplate">Save Template</button>
        </div>
      </div>
    </div>

    <!-- Event Created Modal -->
    <div id="eventCreatedModal" class="modal-overlay">
      <div class="modal">
        <div class="modal-header">
          <h2>Event Created Successfully</h2>
          <button class="modal-close" onclick="closeModal('eventCreatedModal')">&times;</button>
        </div>
        <div class="modal-body">
          <div class="event-created-content">
            <div class="event-created-icon">‚úÖ</div>
            <p>Your event has been created and posted!</p>
            <div class="event-code-display">
              <div class="code-label">Attendance Code</div>
              <div class="code" id="newEventCode"></div>
            </div>
            <p class="event-created-note">Share this code with participants to record their attendance.</p>
          </div>
        </div>
        <div class="modal-footer">
          <button class="btn btn-primary" onclick="closeModal('eventCreatedModal')">Done</button>
        </div>
      </div>
    </div>

    <!-- Event Code Modal -->
    <div id="eventCodeModal" class="modal-overlay">
      <div class="modal">
        <div class="modal-header">
          <h2>Event Attendance Code</h2>
          <button class="modal-close" onclick="closeModal('eventCodeModal')">&times;</button>
        </div>
        <div class="modal-body">
          <div id="eventCodeContent"></div>
        </div>
        <div class="modal-footer">
          <button class="btn btn-secondary" onclick="closeModal('eventCodeModal')">Close</button>
        </div>
      </div>
    </div>

    <!-- Confirmation Modal -->
    <div id="confirmModal" class="modal-overlay">
      <div class="modal">
        <div class="modal-header">
          <h2 id="confirmModalTitle">Confirm Action</h2>
          <button class="modal-close" onclick="closeModal('confirmModal')">&times;</button>
        </div>
        <div class="modal-body">
          <p id="confirmModalMessage"></p>
        </div>
        <div class="modal-footer">
          <button class="btn btn-secondary" onclick="closeModal('confirmModal')">Cancel</button>
          <button class="btn btn-danger" id="confirmModalBtn">Confirm</button>
        </div>
      </div>
    </div>

    <!-- Toast -->
    <div id="toast" class="toast"></div>
  </div>

  <script>
    // Pass data from server to client
    const GUILD_ID = '<%= guildId %>';
    const USER_ID = '<%= userId %>';
  </script>
  <script src="/static/js/admin-panel.js"></script>
</body>
</html>
